{
    "name": "omni-note",
    "workspaces": [
        "src/client",
        "src/server"
    ],
    "scripts": {
        "dev:server": "bun --cwd src/server dev",
        "dev:client": "bun --cwd src/client dev",
        "dev": "run-p dev:* --print-label",
        "typecheck:server": "bun --cwd src/server typecheck",
        "typecheck:client": "bun --cwd src/client typecheck",
        "typecheck": "run-p typecheck:*"

    },
    "dependencies": {
        "npm-run-all": "^4.1.5"
    }
}